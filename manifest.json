{
  "manifest_version": 3,
  "name": "Cambridge Translator",
  "version": "1.0.0",
  "description": "Translator with Cambridge Dictionary pronunciation",
  "permissions": ["activeTab", "storage", "contextMenus", "offscreen"],
  "host_permissions": ["https://dictionary.cambridge.org/*", "https://translate.googleapis.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html"
}
